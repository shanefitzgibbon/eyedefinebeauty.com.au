- @active_tab = 'dd#gallery-tab'
- @page_desc = "Gallery of images displaying examples of eyelash extensions performed by Eye Define Beauty."

%article#photoGallery
  .row
    .twelve.columns
      %h2 Gallery
  .row
    .eight.columns.centered
      #featured
        = image_tag "gallery/eyelash-sample1.jpg", { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }
        = image_tag 'gallery/eyelash-sample2.jpg', { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }
        = image_tag 'gallery/eyelash-sample3.jpg', { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }
        = image_tag "gallery/eyelash-sample4.jpg", { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }
        = image_tag 'gallery/eyelash-sample5.jpg', { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }
        = image_tag 'gallery/eyelash-sample6.jpg', { 'alt' => 'Sample of Eye Define Beauty eyelash extensions' }

- content_for :extra_js do
  :javascript
    $(window).load(function() {
      $('#featured').orbit({
        timer: false,
        bullets: false,			 // true or false to activate the bullet navigation
        bulletThumbs: false, // thumbnails for the bullets
        fluid: '4x3'
      });
    });
